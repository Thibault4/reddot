<div class="container">
  <h1><%= @product.name %></h1>

  <div class="product-details">
    <p><strong>Description:</strong> <%= @product.description %></p>
    <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
    <p><strong>Stock:</strong> <%= @product.stock %></p>
     <% if current_user %>
        <% if current_user.id == Seller.find_by(id:@product.seller_id).user_id %>
          <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %> |
          <%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
          <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to 'Buy', product_path(@product), class: 'btn btnerror' %> |
          <%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
        <% end %>
      <% end %> 
  </div>
  <div>
</div>
</div>
